
  <% @projects.each do |project|%>
    <div class="col-md-3 card-index project-picture" style="background-image: url('<%= image_path(project.media) %>');">
      <div class="project-picture" >
      </div>
      <div class="title-project">
        <%= project.title %>
      </div>

      <% project.jobs.each do |job| %>
      <div class="rounded-job" style="background-image: url('<%= image_path(job.picture) %>');">
      </div>
      <% end %>
      <div class="project-description">
        <%= project.description %>
      </div>
      <div class="project-link">
        <%=link_to "See the project", project_path(project) %>
      </div>
    </div>
  <% end %>




